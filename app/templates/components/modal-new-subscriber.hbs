<header class="modal-header">
    <h1>添加订阅者</h1>
</header>
<a class="close" href="" title="关闭" {{action "closeModal"}}>{{inline-svg "close"}}<span class="hidden">关闭</span></a>

<div class="modal-body">
    <fieldset>
        {{#gh-form-group errors=model.errors hasValidated=model.hasValidated property="email"}}
            <label for="new-subscriber-email">Email 地址</label>
            <input type="email"
                value={{model.email}}
                oninput={{action "updateEmail" value="target.value"}}
                id="new-subscriber-email"
                class="gh-input email"
                placeholder="Email Address"
                name="email"
                autofocus="autofocus"
                autocapitalize="off"
                autocorrect="off">
            {{gh-error-message errors=model.errors property="email"}}
        {{/gh-form-group}}

    </fieldset>
</div>

<div class="modal-footer">
    <button {{action "closeModal"}} class="gh-btn"><span>取消</span></button>
    {{gh-task-button "Add" successText="Added" task=addSubscriber class="gh-btn gh-btn-green gh-btn-icon"}}
</div>
